<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông báo chi tiết</title>

    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="row all-notifications">
        <div class="col-3">
            <%- include('../partials/navbar.ejs') %>
        </div>

        <% if(locals.noti) {%>
            <div class="col-8 d-flex justify-content-center my-4">
                <div class="shadow-lg p-3 bg-white rounded mx-auto w-100">
                    <h1 class="mx-100 text-wrap text-break text-center text-info text-uppercase my-3"><%= locals.noti.title %></h1>
                    <div class="d-flex flex-row-reverse h6 font-italic my-3"><%= locals.noti.subject %> | Ngày đăng: <%= locals.date %></div>
                    <div class="mx-100 text-wrap text-break my-3">
                        <%= locals.noti.content %>
                    </div>
                    <div class="d-flex justify-content-end my-3">
                        <div class="d-inline-flex h4 badge badge-success font-italic"><%= locals.noti.author ? locals.noti.author.fullname : "" %></div>
                    </div>

                    <div class="d-flex flex-row-reverse">
                        <a class="btn btn-danger" href="<%= locals.delete_href %>" role="button">Xóa</a>
                        <a class="btn btn-primary mr-2 text-light" id="update-noti-btn" role="button">Cập nhật</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('../partials/new_notifictation.ejs') %>

    <!-- notify -->
    <%- include('../partials/toast_notification.ejs') %>
</body>

</html>