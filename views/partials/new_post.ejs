<div>
    <div class="form-row align-items-center">
        <div class="col-1">
            <img src="https://res.cloudinary.com/mhmd/image/upload/v1556074849/avatar-1_tcnd60.png" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
        </div>

        <div class="col-11">
            <input id="input_tag_new_post" data-toggle="modal" data-target="#newPostModal" type="text" class="form-control shadow-none" placeholder="Post something news!" readonly>
        </div>
    </div>

    <!-- Modal area -->
    <div class="modal fade" id="newPostModal" data-backdrop="static">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
          
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Bài đăng mới</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            
            <!-- Modal body -->
            <div class="modal-body">
                <!-- new post -->
                <form class="p-2" id="new_post_form" method="POST">
                    <textarea id="textarea-content" class="form-control" rows="3" name="content" placeholder="Nội dung bài đăng..."></textarea>
                    <div class="custom-control mt-3 pl-0">
                        <div class="custom-file">
                            <input type="file" name="images" class="custom-file-input" accept="image/*" multiple>
                            <label class="custom-file-label" for="customFile">Đính kèm ảnh</label>
                        </div>
                    </div>

                    <div class="custom-control mt-3 pl-0">
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Đính kèm video (Youtube)</div>
                            </div>
                            <input type="text" id="video-url" class="form-control" name="video" placeholder="Nhập vào đường link Video youtube">
                        </div>
                    </div>

                    <!-- preview image area -->
                    <div id="preview_div">
                        <hr>
                    </div>
                
                </form>
                <!-- end new post -->
            </div>
            
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="submit_new_post" class="btn btn-primary">Đăng bài</button>
                <button type="button" id="close_new_post_modal" class="btn btn-danger">Hủy bỏ</button>
            </div>
            
          </div>
        </div>
      </div>
</div>